@page   "{ProductId:int?}"
@model EShop.Web.Pages.Product.DeleteProductModel
@{
}

<div class="container">
    <div class="row border-bottom border-primary">
        <h1 class="m-1">Delete Product</h1>
    </div>
    <div class="row mt-2">
        <div class="col-8 m-auto border border-primary rounded">
            <div class="row border-bottom border-primary">
                <h4 class="text-warning m-1">Are you sure you want to delete this product?</h4>
            </div>
            <div class="row">
                <div class="col-7">
                    <div class="row m-1">
                        <h4>Product Id: <b class="text-muted">@Model.Product.ProductId</b></h4>
                    </div>
                    <div class="row m-1">
                        <h4>Product Name: <b class="text-muted">@Model.Product.Name</b></h4>
                    </div>
                    <div class="row m-1">
                        <h4>Product Price: <b class="text-muted">@Model.Product.Price€</b></h4>
                    </div>
                    <div class="row m-1">
                        <h4 class="form-text">Product Description:</h4>
                        <textarea cols="50" rows="5" readonly class="border-primary rounded text-muted font-weight-bold">@Model.Product.Description</textarea>
                    </div>
                </div>
                <div class="col-5 text-center">
                    <img src="@("/Img/" + Model.Product.ImgUrl)" alt="@Model.Product.Name" class="mr-auto ml-auto m-1 border border-secondary" style="max-height:300px" />
                </div>
            </div>
            <div class="row border-top border-primary">
                <div class="col-6 text-center mt-2 mb-2">
                    <a asp-page="ProductDetails" asp-route-ProductId="@Model.Product.ProductId" class="btn btn-warning">Cancel</a>
                </div>
                <form method="post" asp-page-handler="ConfirmProductDelete" class="col-6 text-center mt-2 mb-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
@page
@model EShop.Web.Pages.User.UserOrderViewModel
@{
}

<div class="container">
    <div class="row border-bottom border-primary">
        <h1 class="m-1">Order History</h1>
    </div>
    <div class="row border border-primary mt-2">
        <div class="col-8">
            @foreach (OrderDTO order in Model.UserOrders)
            {
                <div class="row border border-primary">
                    <div class="col-3 border-right">
                        <label class="form-text">Order Number:</label>
                        <p>@order.OrderId</p>
                    </div>
                    <div class="col-3 border-right">
                        <label class="form-text">Order Date:</label>
                        <p>@order.OrderDate</p>
                    </div>
                    <div class="col-3 border-right">
                        <label class="form-text">Order Price:</label>
                        <p>@order.TotalOrderPrice</p>
                    </div>
                    <div class="col-3">
                        <a asp-page="OrderDetails" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>